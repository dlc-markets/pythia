{
  "name": "@dlc-markets/pythia",
  "version": "0.0.0",
  "description": "A set of wrappers to easily communicate with Pythia",
  "contributors": [
    {
      "name": "Victor Afanassieff",
      "email": "victor@afanassieff.com",
      "url": "https://victor.afanassieff.com"
    },
    {
      "name": "Fanis Michalakis",
      "email": "fanis@michalakis.com",
      "url": "https://fanismichalakis.fr/"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dlc-markets/pythia/issues"
  },
  "homepage": "https://github.com/dlc-markets/pythia/api-js/#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dlc-markets/pythia.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@8.10.5",
  "engines": {
    "node": ">=20.9.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "lint": "eslint --color './**/*.ts'",
    "format": "prettier --write './**/*.ts'",
    "format:check": "prettier --check './**/*.ts'",
    "build": "tsc --build tsconfig.build.json",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "20.9.4",
    "@typescript-eslint/eslint-plugin": "6.12.0",
    "@typescript-eslint/parser": "6.12.0",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-promise": "6.1.1",
    "prettier": "3.1.0",
    "typescript": "5.3.2"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
